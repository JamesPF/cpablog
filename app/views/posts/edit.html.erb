<!DOCTYPE <html>
<head>
  <title>Edit Post</title>
  <link rel="stylesheet" type="text/css" href="style.css">
</head>
<body>
  <div class="admin-header">
    <p><%= link_to 'Logout', logout_path, method: :delete %></p>
    <img src="images/michael_felz_pc_med.png" height="150" width="401">
    <div class="admin-menu">
      <ul>
        <%= link_to posts_path do %><li>Posts</li><% end %>
        <%= link_to bios_path do %><li>About</li><% end %>
        <%= link_to settings_path do %><li>Settings</li><% end %>
      </ul>
    </div>
  </div>
  <div class="post-entries">
    <p id="post-back"><%= link_to 'Back', posts_path %></a></p>
    <h1>Edit Post</h1>
    <%= form_for(@post, :url => {:action => :update, :controller => :posts} ) do |p| %>
      <%= p.label :title %>
      <%= p.text_field :title %>
      <%= p.label :date %>
      <%= p.date_field :date %>
      <br>
      <%= p.label :content %><br>
      <%= p.text_area :content %>
      <br>
      <%= p.label :page_title %>
      <%= p.text_field :page_title %>
      <br>
      <%= p.label :meta_description %>
      <br>
      <%= p.text_area :meta_description, class: 'm-description' %>
      <br>
      <%= p.submit "Update" %>
    <% end %>
  </div>
</body>
</html>